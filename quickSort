#include<stdio.h>
#include<stdlib.h>
void quicksort(int arr[],int first,int last)
{
   int i, j, pivot, temp;

   if(first<last)
   {
      pivot=first;
      i=first;
      j=last;

      while(i<j)
      {
         while(arr[i]<=arr[pivot]&&i<last)
            i++;
         while(arr[j]>arr[pivot])
            j--;
         if(i<j)
         {
            temp=arr[i];
            arr[i]=arr[j];
            arr[j]=temp;
         }
      }

      temp=arr[pivot];
      arr[pivot]=arr[j];
      arr[j]=temp;
      quicksort(arr,first,j-1);
      quicksort(arr,j+1,last);

   }
}

int main()
{
   int i, n, *ptr;
   printf("Enter number of elements: ");
   scanf("%d",&n);
   ptr=(int *)malloc(n*sizeof(int));
   printf("Enter %d elements: ", n);
   for(i=0;i<n;i++)
      scanf("%d",&ptr[i]);
   quicksort(ptr,0,n-1);
   printf("Sorted Array: ");
   for(i=0;i<n;i++)
      printf(" %d ",ptr[i]);
   return 0;
}
